<DOCTYPE html>
<head>
</head>
<body><br/><br/><center>
<h1 style="background:none; color:#461968"><b>FACTS</b></h1>

<table style="width:80%;">
  <tr style="font-size:48px; color:white; background-color:black;">
    <th style="width:33%;">Category</th>
    <th style="width:33%;">Body</th>
    <th style="width:33%;">Source</th>
  </tr>

  <% @facts.each do |fact| %>
  <tr>
    <td><%= fact.category %></td>
    <td><%= fact.body %></td>
    <td><%= link_to('Source', fact.source) %></td>
    <td><%= link_to 'Show', fact_path(fact) %></td>
    <td><%= link_to 'Edit', edit_fact_path(fact) %></td>
  </tr>
  <% end %>
</table></center><br/><br/><br/>
<%= link_to 'New Fact', new_fact_path %>
</body>
</html>
